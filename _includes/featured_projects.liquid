<style>
  .featured-projects .project-card-img-container {
    height: 120px !important;
  }
  .featured-projects .project-card-body {
    min-height: 140px !important;
  }
  .featured-projects .project-card-title {
    min-height: 40px !important;
    font-size: 1.2rem !important;
  }
  .featured-projects .card-text {
    font-size: 0.85rem !important;
  }
  .featured-projects .project-label {
    font-size: 0.65rem !important;
    padding: 1px 6px !important;
  }
</style>

<div class="projects featured-projects">
  <div class="row row-cols-1 row-cols-md-3">
    {% assign sorted_projects = site.projects | sort: "importance" %}
    {% for project in sorted_projects limit:3 %}
      {% include projects.liquid %}
    {% endfor %}
  </div>
  <div class="text-center mt-4">
    <a href="{{ '/projects/' | relative_url }}" class="btn btn-outline-primary btn-sm">
      View All Projects <i class="fa-solid fa-arrow-right"></i>
    </a>
  </div>
</div>

