<div class="col">
  <style>
    .project-card-img-container {
      height: 200px;
      overflow: hidden;
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: #f8f9fa;
    }
    .project-card-img-container img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .project-card-body {
      min-height: 180px;
      display: flex;
      flex-direction: column;
    }
    .project-card-title {
      min-height: 60px;
    }
    .project-card-text {
      flex-grow: 1;
    }
    .project-card-footer {
      margin-top: auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .project-labels {
      display: flex;
      gap: 5px;
      flex-wrap: wrap;
    }
    .project-label {
      display: inline-block;
      padding: 2px 8px;
      border-radius: 3px;
      font-size: 0.7rem;
      font-weight: 500;
      color: white;
    }
    .label-cvml {
      background-color: #3498db;
    }
    .label-embedded {
      background-color: #e74c3c;
    }
    .label-mechanical {
      background-color: #95a5a6;
    }
    .label-mr {
      background-color: #9b59b6;
    }
    .label-llm {
      background-color: #f39c12;
    }
    .label-network {
      background-color: #27ae60;
    }
    .label-sensing {
      background-color: #e67e22;
    }
  </style>
  <a href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      {% if project.img %}
        <div class="project-card-img-container">
          <img src="{{ project.img | relative_url }}" alt="project thumbnail" loading="eager">
        </div>
      {% else %}
        <div class="project-card-img-container"></div>
      {% endif %}
      <div class="card-body project-card-body">
        <h2 class="card-title project-card-title">{{ project.title }}</h2>
        <p class="card-text project-card-text">{{ project.description }}</p>
        {% if project.timeline %}
          {% assign date_parts = project.timeline | split: ' - ' %}
          {% if date_parts.size > 1 %}
            {% assign end_date = date_parts[1] %}
            {% if end_date contains 'Present' %}
              {% assign display_date = 'Ongoing' %}
            {% else %}
              {% assign display_date = end_date %}
            {% endif %}
          {% else %}
            {% assign display_date = project.timeline %}
          {% endif %}
          <p class="text-muted" style="font-size: 0.85rem; margin-bottom: 0.5rem;"><i class="fa-regular fa-calendar"></i> {{ display_date }}</p>
        {% endif %}
        <div class="project-card-footer ml-1 mr-1 p-0">
          <div class="project-labels">
            {% if project.labels %}
              {% for label in project.labels %}
                {% assign label_class = label | downcase | replace: '/', '' | prepend: 'label-' %}
                <span class="project-label {{ label_class }}">{{ label }}</span>
              {% endfor %}
            {% endif %}
          </div>
          <div style="display: flex; gap: 10px; align-items: center;">
            {% if project.website %}
              <div class="website-icon" style="z-index: 10; position: relative;">
                <div class="icon" data-toggle="tooltip" title="Visit Website">
                  <a href="{{ project.website }}" onclick="event.stopPropagation();" target="_blank" style="color: inherit; text-decoration: none;">
                    <i class="fa-solid fa-external-link" style="font-size: 1.1rem;"></i>
                  </a>
                </div>
              </div>
            {% endif %}
            {% if project.github %}
              <div class="github-icon">
                <div class="icon" data-toggle="tooltip" title="Code Repository">
                  <a href="{{ project.github }}" onclick="event.stopPropagation();" target="_blank"><i class="fa-brands fa-github gh-icon"></i></a>
                </div>
                {% if project.github_stars %}
                  <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                    <i class="fa-solid fa-star"></i>
                    <span id="{{ project.github_stars }}-stars"></span>
                  </span>
                {% endif %}
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
